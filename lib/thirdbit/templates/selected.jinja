{% extends "base.jinja" %}

{% block content %}
<h2>Favorites</h2>
<table>
{% for post in site._posts|reverse %}
{%- if post.category == "favorite" -%}<tr><td>{{post.date}}</td><td><a href="{{post.url}}">{{post.title}}</a></td></tr>{%- endif -%}
{% endfor %}
</table>

<h2>Anecdotes</h2>
<table>
{% for post in site._posts|reverse %}
{%- if post.category == "anecdote" -%}<tr><td>{{post.date}}</td><td><a href="{{post.url}}">{{post.title}}</a></td></tr>{%- endif -%}
{% endfor %}
</table>
{% endblock %}
